<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FCFDFD"
    android:weightSum="3"
    tools:context="com.example.hdfp_11_2.Calculators_Home">


    <!--Heading-->

    <LinearLayout
        android:id="@+id/topnavbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:background="#5CE2B7"
        android:orientation="vertical">

        <!--

        <ImageButton
            android:id="@+id/menubutton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#5CE2B7"
            app:srcCompat="@drawable/ic_menu" />
-->
        <TextView
            android:id="@+id/apptitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Helthy Diet Food Plan"
            android:textColor="#FAFCFC"
            app:fontFamily="@font/dancing_script"
            android:textDirection="firstStrong"
            android:layout_gravity="center_horizontal"
            android:textSize="35dp" />


        <!--
        <ImageButton
            android:id="@+id/searchbutton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#5CE2B7"
            android:gravity="left"
            app:srcCompat="@drawable/ic_search" />
-->

    </LinearLayout>

    <!--Content 1 -->

    <LinearLayout
        android:id="@+id/optionline1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/headingBMICalculator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Body Fat Calculator"
            android:layout_gravity="center_horizontal"
            android:textColor="#000000"
            android:textSize="20dp" />

    </LinearLayout>







    <!--Content 2 -->

    <LinearLayout
        android:id="@+id/bodyline2_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/labelGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Gender"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>



    <!--Content 2 -->

    <LinearLayout
        android:id="@+id/bodyline2_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
       >


        <RadioGroup
            android:id="@+id/radioGrp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"

            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            >

            <RadioButton
                android:id="@+id/radioM"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:checked="false"
                android:text="Male"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:checked="false"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="Female"
                />

        </RadioGroup>




    </LinearLayout>

    <LinearLayout
        android:id="@+id/bodyline2_4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        >

        <ImageView
            android:id="@+id/buttonmale"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/maleicon"
            />

        <ImageView
            android:id="@+id/buttonfemale"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/femaleicon"
            />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/bodyline2_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_weight="0.2"
        >

        <Button
            android:id="@+id/btnSetGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:text="Set"
            />

        <TextView
            android:id="@+id/textGenderbodyFatCalc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/edittext_bg"
            android:hint="Gender"
            />

    </LinearLayout>

    <!--Content 3 -->

    <LinearLayout
        android:id="@+id/bodyline3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.2"
        >

        <EditText
            android:id="@+id/textFieldWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:text="Weight (kg)"
           />

        <EditText
            android:id="@+id/textWeightBodyFat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:background="@drawable/edittext_bg"
            android:hint="Enter Weight"
            android:inputType="numberDecimal" />




    </LinearLayout>

    <!--Content 4 -->

    <LinearLayout
        android:id="@+id/bodyline4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.2"
        >


        <EditText
            android:id="@+id/textFieldWaistCircumference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:text="Waist (cm)" />


        <EditText
            android:id="@+id/textWaistCircumference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:background="@drawable/edittext_bg"
            android:hint="Enter Waist Circumference"
            android:inputType="numberDecimal" />



    </LinearLayout>

    <!--Content 5 -->

    <LinearLayout
        android:id="@+id/bodyline5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.2"
        >

        <EditText
            android:id="@+id/textFieldWristCircumference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:text="Wrist (cm)" />

        <EditText
            android:id="@+id/textWristCircumference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:background="@drawable/edittext_bg"
            android:hint="Enter Wrist Circumference"
            android:inputType="numberDecimal" />


    </LinearLayout>




    <!--Content 5 -->

    <LinearLayout
        android:id="@+id/bodyline7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.2"
       >

        <EditText
            android:id="@+id/textFieldHipCircumference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:text="Hip (cm)" />

        <EditText
            android:id="@+id/textHipCircumference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:background="@drawable/edittext_bg"
            android:hint="Enter Hip Circumference"
            android:inputType="numberDecimal" />



    </LinearLayout>




    <!--Content 5 -->

    <LinearLayout
        android:id="@+id/bodyline8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.2"
        >

        <EditText
            android:id="@+id/textFieldForearmCircumference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:text="Forearm (cm)" />

        <EditText
            android:id="@+id/textForearmCircumference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:textSize="15dp"
            android:background="@drawable/edittext_bg"
            android:hint="Enter Forearm Circumference"
            android:inputType="numberDecimal" />



    </LinearLayout>





    <!--Content 6 -->

    <LinearLayout
        android:id="@+id/bodyline6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        >

        <Button
            android:id="@+id/buttonCalcBodyFatResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            android:background="#5CE2B7"
            android:text="CACULATE"
            android:textSize="20dp"
            app:fontFamily="@font/leaguegothic_regular"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/buttonShowBodyFatResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="#5CE2B7"
            app:fontFamily="@font/leaguegothic_regular"
            android:text="Show Result"
            android:textSize="20dp"
            android:textColor="#FFFFFF" />

    </LinearLayout>



    <!--Footer-->

    <LinearLayout
        android:id="@+id/bottomnavbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:background="#5CE2B7"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/homebutton"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="#5CE2B7"
            app:srcCompat="@drawable/ic_home"
            android:layout_gravity="center_horizontal"/>

        <!--
        <ImageButton
            android:id="@+id/settingsbutton"
            android:layout_width="41dp"
            android:layout_height="match_parent"
            android:background="#5CE2B7"
            android:layout_marginLeft="190dp"
            app:srcCompat="@drawable/ic_settings" />
-->
    </LinearLayout>

</LinearLayout>








