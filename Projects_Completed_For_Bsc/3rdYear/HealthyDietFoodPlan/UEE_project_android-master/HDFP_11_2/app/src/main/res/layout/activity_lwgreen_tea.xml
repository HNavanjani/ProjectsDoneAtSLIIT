<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FCFDFD"
    tools:context=".LWGreenTea">

    <!--Heading-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#5CE2B7">

        <TextView
            android:layout_width="305dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="22dp"
            android:text="Helthy Diet Food Plan"
            android:textAlignment="center"
            android:textColor="#FAFCFC"
            android:textDirection="firstStrong"
            android:textSize="25dp" />

    </LinearLayout>
    <!--Content-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="424dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:background="#30A52B"
            android:fontFamily="cursive"
            android:text="               Green Tea"
            android:textColor="#FBFDFB"
            android:textSize="30dp" />

        <ViewFlipper
            android:id="@+id/green_tea_flipper"
            android:layout_width="match_parent"
            android:layout_height="160dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#5CE2B7">
                <!--Let's make it-->
                <TextView
                    android:layout_width="339dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#30A52B"
                    android:fontFamily="cursive"
                    android:text="Let's Make It"
                    android:textColor="#F6F7F7"
                    android:textSize="40dp" />


                <TextView
                    android:layout_width="339dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#FCFDFC"
                    android:fontFamily="sans-serif-condensed"
                    android:text="1 tablespoon green tea leaves"
                    android:textColor="#08443E"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="339dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#FCFDFC"
                    android:fontFamily="sans-serif-condensed"
                    android:text="1 cup water"
                    android:textColor="#08443E"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="339dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#FCFDFC"
                    android:fontFamily="sans-serif-condensed"
                    android:text="5 mint leaves"
                    android:textColor="#08443E"
                    android:textSize="25dp" />
                <!--How do we make it-->
                <TextView
                    android:layout_width="339dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#30A52B"
                    android:fontFamily="cursive"
                    android:text="How Do we make it"
                    android:textColor="#F3F7F6"
                    android:textSize="40dp" />

                <TextView
                    android:layout_width="339dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#FCFDFC"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Add mint leaves into a cup of water and boil it"
                    android:textColor="#0B4661"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="339dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#FCFDFC"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Let it boil for 5 more minutes"
                    android:textColor="#0B4661"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="339dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#FCFDFC"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Add green tea leaves and let it soak for 5 minutes"
                    android:textColor="#0B4661"
                    android:textSize="25dp" />
                <TextView
                    android:layout_width="339dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#FCFDFC"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Stir before drinking"
                    android:textColor="#0B4661"
                    android:textSize="25dp" />
                <TextView
                    android:layout_width="339dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#FCFDFC"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Strain and pour the boiled water into cup"
                    android:textColor="#CA4639"
                    android:textSize="25dp" />
                <!--Benefits-->
                <TextView
                    android:layout_width="339dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#30A52B"
                    android:fontFamily="cursive"
                    android:text="Benefits........."
                    android:textColor="#FBFDFB"
                    android:textSize="40dp" />


                <TextView
                    android:layout_width="339dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#D5C753"
                    android:fontFamily="sans-serif-condensed"
                    android:text="General Benefits"
                    android:textColor="#12312E"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="339dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#8D864E"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Slim Your Body"
                    android:textColor="#FFC107"
                    android:textSize="25dp" />
                <TextView
                    android:layout_width="339dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#8D864E"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Provide  catechins and flavonoids nutritions"
                    android:textColor="#FFC107"
                    android:textSize="25dp" />
                <TextView
                    android:layout_width="339dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#8D864E"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Can lower heart rates"
                    android:textColor="#FFC107"
                    android:textSize="25dp" />
                <TextView
                    android:layout_width="339dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#8D864E"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Reduce type two diabetes"
                    android:textColor="#FFC107"
                    android:textSize="25dp" />
                <!--Green Tea leaves-->
                <TextView
                    android:layout_width="339dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#FBFDFB"
                    android:fontFamily="cursive"
                    android:text="Green Tea Leaves"
                    android:textColor="#EC4612"
                    android:textSize="30dp" />
                <ImageView
                    android:layout_width="339dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/leaves"/>

                <TextView
                    android:layout_width="339dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#595C5C"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Contains cotachine called epigallocatechin(EGCG) that aids weight loss by mobilizing fat"
                    android:textColor="#FBFCFC"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="339dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#FBFCF8"
                    android:fontFamily="cursive"
                    android:text="Mint"
                    android:textColor="#504448"
                    android:textSize="30dp" />
                <ImageView
                    android:layout_width="339dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/mint"/>
                <TextView
                    android:layout_width="339dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#CDDC39"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Can prevent from gastritis"
                    android:textColor="#F5F4F2"
                    android:textSize="25dp" />
                <TextView
                    android:layout_width="339dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#CDDC39"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Can prevent from irritable bowel syndrome"
                    android:textColor="#F3F3F2"
                    android:textSize="25dp" />
                <TextView
                    android:layout_width="339dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#CDDC39"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Can prevent from allergies and common cold (antioxident properties)"
                    android:textColor="#F7F5F1"
                    android:textSize="25dp" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>