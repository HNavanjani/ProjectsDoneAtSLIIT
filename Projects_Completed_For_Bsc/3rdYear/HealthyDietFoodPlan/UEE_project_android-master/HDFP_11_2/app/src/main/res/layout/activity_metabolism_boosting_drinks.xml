<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FCFDFD"
    android:weightSum="6"
    tools:context=".MetabolismBoostingDrinks">

    <!--Heading-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="#5CE2B7">

        <TextView
            android:layout_width="305dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="22dp"
            android:text="Helthy Diet Food Plan"
            android:textAlignment="center"
            android:textColor="#FAFCFC"
            android:textDirection="firstStrong"
            android:textSize="25dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">
    </LinearLayout>
    <!--content-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#9EC9EB">

        <TextView
            android:layout_width="388dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:fontFamily="cursive"
            android:text="Let's Increase Your Metabolism"
            android:textColor="#FBFDFB"
            android:textSize="30dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.3"
        android:weightSum="4.3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="339dp"
            android:layout_height="0dp"
            android:layout_weight="2.1">

            <Button
                android:id="@+id/flwater_drink_button"
                android:layout_width="157dp"
                android:layout_height="227dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/flavored_water1" />

            <Button
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/fenugreek1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="354dp"
            android:layout_height="0dp"
            android:layout_weight="2.1">

            <Button
                android:layout_width="157dp"
                android:layout_height="220dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/whey_protein_chia_seed1" />

            <Button
                android:layout_width="195dp"
                android:layout_height="220dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/pineapple_drink1" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">

        <Button
            android:id="@+id/recom_best_drinks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CF95AA"
            android:text="Recommended Best Drinks"
            android:textSize="27dp"
            android:fontFamily="cursive"
            android:textColor="#FBFDFB"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">
    </LinearLayout>

    <!--Footer-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:background="#5CE2B7">

        <ImageButton
            android:layout_width="423dp"
            android:layout_height="match_parent"
            android:background="#5CE2B7"
            android:src="@drawable/home" />
    </LinearLayout>


</LinearLayout>