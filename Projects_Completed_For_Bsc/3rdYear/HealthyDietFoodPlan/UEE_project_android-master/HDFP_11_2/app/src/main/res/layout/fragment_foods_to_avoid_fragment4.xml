<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".foodstoAvoidFragments.FoodsToAvoidFragment1">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:background="#FAA185">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Fats and Oils"
                android:gravity="center"
                android:textSize="40sp"
                android:textColor="#3F51B5"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/foods_to_avoid_fatsandoil"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Avoid eation Lard, butter, margarine, and sunflower oil"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="#0A1968"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>